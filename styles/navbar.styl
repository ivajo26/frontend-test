.Navbar
  display flex
  width 100%
  margin-bottom padding*2
  &-option
    background-color white
    color: primary
    transition .2s all ease-in-out
    border 0
    display flex
    flex-direction column
    align-items center
    flex-basis 25%
    padding padding
    &.active
    &:hover
      color: white
      background-color primary
    & small
      padding-top padding
      font-size 60%
