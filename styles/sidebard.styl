.Sidebar
  &-logo
    text-align center
    margin-bottom padding * 2
    & img
      max-width 50%
  &-options
    display flex
    flex-direction column
    align-items center
    margin-top padding * 2
    padding padding * 2
    flex-grow 1
    position relative
    &::after
      content ''
      position absolute
      width 1px
      height 90%
      top 50%
      right 0
      transform translateY(-50%)
      background-color border
    &-form
      display flex
      padding 0 padding*2
      flex-direction column
