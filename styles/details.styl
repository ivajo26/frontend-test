.Details
  background-color white
  display flex
  padding padding*2padding
  border-radius 2rem
  color text-light
  font-size 90%
  justify-content space-around
  & > div
    position: relative
    padding 0 padding*4
    &:after
      position absolute
      height 80%
      right 0
      content ""
      border-right: 1px solid text-light
    &:last-child
      &:after
        border 0
  &-date
    display flex
    flex-direction column
    justify-content center
    align-items center
    &-hour
      &-number
        margin-right padding*2
        position relative
        &:after
          position absolute
          content "th"
          top 0
          left 100
          font-size 50%
  &-location
    &-icon
      padding padding*2
    display flex
    justify-content center
    align-items center
    &-description
      &-icon
        text-align center
  &-options
    display flex
    align-items center
    justify-content space-around
    flex-grow 1
    &-icon
      padding 0 padding*2
    &-value
      font-size 250%
    &-alert
      background-color danger
      border-radius .5rem
      color: white
      padding padding*2
    &-menu
      &-button
        background transparent
        border 0
